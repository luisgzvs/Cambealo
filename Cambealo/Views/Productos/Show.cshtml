@model Cambealo.Models.Producto

@{
    var usuario = System.Web.HttpContext.Current.Session["usuarioActual"] as Dictionary<string, string>;
}

@if (usuario != null)
{
    var nombreCompleto = usuario["nombre"] + usuario["apellidos"];
    <h2>Producto</h2>
    <div class="row">
        <div class="col-md-6">
            <dl class="dl-horizontal">
                <dt>
                    @Html.DisplayNameFor(model => model.Nombre)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.Nombre)
                </dd>

                <dt>
                    @Html.DisplayNameFor(model => model.Descripcion)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.Descripcion)
                </dd>

                <dt>
                    @Html.DisplayNameFor(model => model.Fecha)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.Fecha)
                </dd>

                <dt>
                    @Html.DisplayNameFor(model => model.Estado)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.Estado)
                </dd>

            </dl>
        </div>
        <div class="col-md6">
            <div class="row">
                <div class="col-md-12">
                    <dl>
                        <dt>
                            @Html.DisplayNameFor(model => model.Foto)
                        </dt>
                    </dl>
                </div>
                <div class="col-md-12">
                    @{
                    string imageBase64 = Convert.ToBase64String(Model.Foto);
                    string imageSrc = string.Format("data:image/jpg;base64,{0}", imageBase64);
                    <img src="@imageSrc" width="235" height="100" />
                    }
                </div>
            </div>
        </div>
    </div>

    <p>
        @Html.ActionLink("Editar", "editar/" + Model.Id, "usuario/" + nombreCompleto + "/productos", routeValues: null, htmlAttributes: new { id = "registrarLink" }) |
        @Html.ActionLink("Regresar", "Index")
    </p>

}
